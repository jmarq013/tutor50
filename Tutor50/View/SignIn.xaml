<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tutor50.SignIn">
	<ContentPage.Content>
		<StackLayout Padding="40" Spacing="20" BackgroundColor="#00b9ad">
			<Label Text="Sign In" HorizontalOptions="Center" />
			<Entry x:Name="Email" Placeholder="Email" />
			<Entry x:Name="Password" Placeholder="Password" IsPassword="true"/>
			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button Text="Sign In" Clicked="SignInClicked" BackgroundColor="#00b9ad" TextColor="White" WidthRequest="100" HorizontalOptions="Start" />
				<Button Text="Cancel" Clicked="OnCancel" TextColor="Red" WidthRequest="100" HorizontalOptions="End" />
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
